{
  "install": "pip install -r requirements.txt && cd frontend && npm ci && cd ..",
  "start": "node server.js",
  "watch": {
    "ignore": [
      "\\.pyc$",
      "^logs/",
      "^tmp/",
      "node_modules/",
      "frontend/node_modules/",
      "frontend/.next/",
      "frontend/out/",
      "public/",
      "__pycache__/"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^requirements\\.txt$",
        "frontend/package\\.json$"
      ]
    },
    "restart": {
      "include": [
        "^server\\.js$",
        "^main\\.py$",
        "\\.py$"
      ]
    }
  }
}
